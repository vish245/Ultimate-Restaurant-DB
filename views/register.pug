doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Register User
    body 
        a(href="/home") Home
        a(href="/users") Users
        if !login
            a(href="/login") Login
        
        else
            a(href="/orders") OrderForm 
            a(href="/users/" + userID)  UserInfo
            a(href="/logout")    Logout
        
        if (isAdded)
            p(style={color: "red"}) The user is already exists! Please choose a different username.

        form(action="/register", method="post") 
            p Username:
                input(type="text" name ="username") 
            p Password:
                input(type="password" name="password") 
            button(type="submit") Register