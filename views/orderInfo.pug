doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Order Information
    body 
        a(href="/home") Home
        a(href="/users") Users
        if !login
            a(href="/register") Register
            a(href="/login") Login
        
        else
            a(href="/orders")           OrderForm 
            a(href="/users/" + userID)  UserInfo
            a(href="/logout")           Logout
        
        p Username #{order.username}
        h2 Restaurant Name: #{order.order.restaurantName}
        each item in order.order.order
            p Item Name: #{item.name}
                p Quantity: #{item.quantity}
            br
        
        p Subtotal: $#{order.order.subtotal}
        p Tax: $#{order.order.tax}
        p Dilivery Fee: $#{order.order.fee}
        p Total: $#{order.order.total}