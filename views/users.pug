doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Users
    body
         
        a(href="/home") Home
        
        if !login
            a(href="/register") Register
            a(href="/login") Login
        
        else
            a(href="/orders") OrderForm 
            a(href="/users/" + userID)  UserInfo
            a(href="/logout")    Logout

        br 
        h3 Users
        
        each user in users
            if !user.privacy
                a(href="/users/" + user._id) #{user.username}
                br